'use strict';

var seat = require('..');
var program = require('commander');
var pkg = require('../package.json');

program
  .option('-v, --versions', 'print put version infomation')
  .parse(process.argv);

if (program.versions) {
  console.info('\n  ' + pkg.version + '\n');
  process.exit(0);
}

seat();
